@model Capstone_Project.Models.Login

@{
    ViewBag.Title = "ChangePassword";
}

<div class="navbar navbar-inverse navbar-fixed-top">
    <ul class="nav navbar-nav" id="user">
        <li> <img src="~/Images/Company_Logo.PNG" alt="Sample Photo" height="50" /></li>
    </ul>
</div>

<style>
    body {
        background-color: lightgray;
    }

    #centered {
        border-radius: 25px;
        border: 2px solid #73AD21;
        background-color: white;
        width: 400px;
        height: 300px;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
    }
</style>



@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" id="centered">
    <h2 style="text-align:center"><b>Change Password</b></h2>

    @Html.TextBoxFor(model => model.Login_ID, new { @Value = Session["TalentId"], @type = "hidden" })
    @Html.ValidationMessageFor(model => model.Login_ID, "", new { @class = "text-danger" })


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.UserName, new { @type = "hidden" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding-left:70px">
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group" style="padding-left:70px">
        <div class="col-md-10">
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirm Password" } })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>

    <p style="color:red;text-align:center">@ViewBag.PassMatch</p>

    @{
        if (ViewBag.Pass != null)
        {
            <p style="color:green;text-align:center">@ViewBag.Pass @Html.ActionLink("Login", "Login", "Home")</p>
        }
    }
    <br />


    <div class="form-group" style="padding-left:20%">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Update" class="btn btn-group-lg" style="position:absolute;background-color:lightgreen;width:100px" />
        </div>
    </div>
</div>
}



